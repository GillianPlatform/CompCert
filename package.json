{
  "name": "compcert",
  "version": "3.5",
  "description": "Esy packaging for a library, subset of CompCert, that exports an API to manipulate Csharpminor",
  "license": "INRIA Non-Commercial License Agreement",
  "esy": {
    "build":[
      ["dune", "build", "-p", "compcert"]
    ],
    "buildsInSource": true,
    "exportedEnv": {
      "COMPCERT_CONFIG": {
        "val": "#{self.target_dir}/compcert.ini",
        "scope": "global"
      }
    }
  },
  "scripts": {
    "utop": "dune utop --root=_esy/default/build",
    "extract": "sh ./compileUtils/extract.sh"
  },
  "dependencies": {
    "@opam/menhir": "<20200123",
    "ocaml": "^4.8.0",
    "@opam/dune": "^2.0"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "@opam/utop": "*",
    "@opam/odoc": "*",
    "ocaml": "4.8.1000", 
    "@opam/coq": "8.10.2", 
    "@opam/depgraph": "*"
  }
}